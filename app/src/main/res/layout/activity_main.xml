<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.congwiny.percentlayoutdemo.MainActivity">

    <TextView
        android:id="@+id/tv_percent1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:text="text1"
        app:layout_heightPercent="10%"
        app:layout_marginPercent="10%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_percent2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_percent1"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="text2"
        app:layout_heightPercent="30%"
        app:layout_marginRightPercent="10%"
        app:layout_aspectRatio="75%" />

    <TextView
        android:id="@+id/tv_percent3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_percent2"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="text3"
        app:layout_heightPercent="50%"
        app:layout_marginLeftPercent="50%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="50%" />

</android.support.percent.PercentRelativeLayout>
